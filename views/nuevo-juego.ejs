<section class="py-4">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-8">

        <div class="form-shell p-4 p-md-5">
          <div class="d-flex align-items-center justify-content-between flex-wrap gap-2 mb-4">
            <div>
              <h1 class="h3 fw-bold mb-1">Añadir nuevo juego</h1>
              <p class="text-muted mb-0">Completa los datos y guarda.</p>
            </div>
            <a href="/perfil" class="btn btn-outline-secondary">Volver</a>
          </div>

          <form action="/nuevo-juego" method="POST">

            <div class="mb-3">
              <label class="form-label">Título</label>
              <input type="text" name="titulo" class="form-control" placeholder="Ej: Elden Ring" required>
            </div>

            <div class="row g-3">
              <div class="col-md-6">
                <label class="form-label">Plataforma</label>
                <select name="plataforma" class="form-select" required>
                  <option value="PC">PC</option>
                  <option value="PlayStation">PlayStation</option>
                  <option value="Xbox">Xbox</option>
                  <option value="Switch">Switch</option>
                </select>
              </div>

              <div class="col-md-6">
                <label class="form-label">Género</label>
                <select name="genero" class="form-select" required>
                  <option value="Accion">Acción</option>
                  <option value="RPG">RPG</option>
                  <option value="Aventura">Aventura</option>
                  <option value="Deportes">Deportes</option>
                  <option value="Estrategia">Estrategia</option>
                  <option value="Puzzle">Puzzle</option>
                  <option value="Shooter">Shooter</option>
                  <option value="Simulacion">Simulación</option>
                  <option value="Terror">Terror</option>
                </select>
              </div>
            </div>

            <div class="mt-3">
              <label class="form-label">Estado</label>
              <select name="estado" class="form-select" required>
                <option value="Pendiente" selected>Pendiente</option>
                <option value="Jugando">Jugando</option>
                <option value="Completado">Completado</option>
                <option value="Abandonado">Abandonado</option>
              </select>
            </div>

            <div class="mt-3">
              <label class="form-label">URL de la carátula (opcional)</label>
              <input type="url" name="imagen" class="form-control" placeholder="https://.../imagen.jpg">
              <div class="form-text">Si lo dejas vacío, se guardará igualmente.</div>
            </div>

            <div class="d-flex flex-wrap gap-2 mt-4">
              <button type="submit" class="btn btn-primary">Guardar</button>
              <a href="/perfil" class="btn btn-outline-secondary">Cancelar</a>
            </div>

          </form>
        </div>

      </div>
    </div>
  </div>
</section>
