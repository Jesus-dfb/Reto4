<section class="py-4">
  <div class="container">

    <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-end gap-2 mb-4">
      <div>
        <h1 class="h2 fw-bold mb-1">Hola, <span class="text-primary"><%= user.nickname %></span></h1>
        <p class="text-muted mb-0">Aquí puedes añadir, filtrar y actualizar tus juegos.</p>
      </div>

      <a href="/nuevo-juego" class="btn btn-primary">
        <i class="bi bi-plus-circle me-1"></i>
        Nuevo juego
      </a>
    </div>

    <div class="form-shell p-3 p-md-4 mb-4">
      <div class="d-flex align-items-center justify-content-between flex-wrap gap-2 mb-3">
        <h2 class="h5 fw-semibold mb-0"><i class="bi bi-funnel me-1"></i> Filtros</h2>
        <span class="text-muted small">Aplica uno o varios filtros</span>
      </div>

      <form action="/perfil" method="GET">
        <div class="row g-3">

          <div class="col-md-4">
            <label for="filtro-plataforma" class="form-label">Plataforma</label>
            <select id="filtro-plataforma" class="form-select" name="plataforma">
              <option value=""  <%= !filtros.plataforma ? 'selected' : '' %>>Todas</option>
              <option value="PC" <%= filtros.plataforma === 'PC' ? 'selected' : '' %>>PC</option>
              <option value="PlayStation" <%= filtros.plataforma === 'PlayStation' ? 'selected' : '' %>>PlayStation</option>
              <option value="Xbox" <%= filtros.plataforma === 'Xbox' ? 'selected' : '' %>>Xbox</option>
              <option value="Switch" <%= filtros.plataforma === 'Switch' ? 'selected' : '' %>>Switch</option>
            </select>
          </div>

          <div class="col-md-4">
            <label for="filtro-estado" class="form-label">Estado</label>
            <select id="filtro-estado" class="form-select" name="estado">
              <option value=""  <%= !filtros.estado ? 'selected' : '' %>>Todos</option>
              <option value="Jugando" <%= filtros.estado === 'Jugando' ? 'selected' : '' %>>Jugando</option>
              <option value="Completado" <%= filtros.estado === 'Completado' ? 'selected' : '' %>>Completado</option>
              <option value="Pendiente" <%= filtros.estado === 'Pendiente' ? 'selected' : '' %>>Pendiente</option>
              <option value="Abandonado" <%= filtros.estado === 'Abandonado' ? 'selected' : '' %>>Abandonado</option>
            </select>
          </div>

          <div class="col-md-4">
            <label for="filtro-genero" class="form-label">Género</label>
            <select id="filtro-genero" class="form-select" name="genero">
              <option value=""  <%= !filtros.genero ? 'selected' : '' %>>Todos</option>
              <option value="Accion" <%= filtros.genero === 'Accion' ? 'selected' : '' %>>Acción</option>
              <option value="Aventura" <%= filtros.genero === 'Aventura' ? 'selected' : '' %>>Aventura</option>
              <option value="RPG" <%= filtros.genero === 'RPG' ? 'selected' : '' %>>RPG</option>
              <option value="Deportes" <%= filtros.genero === 'Deportes' ? 'selected' : '' %>>Deportes</option>
              <option value="Estrategia" <%= filtros.genero === 'Estrategia' ? 'selected' : '' %>>Estrategia</option>
              <option value="Puzzle" <%= filtros.genero === 'Puzzle' ? 'selected' : '' %>>Puzzle</option>
              <option value="Shooter" <%= filtros.genero === 'Shooter' ? 'selected' : '' %>>Shooter</option>
              <option value="Simulacion" <%= filtros.genero === 'Simulacion' ? 'selected' : '' %>>Simulación</option>
              <option value="Terror" <%= filtros.genero === 'Terror' ? 'selected' : '' %>>Terror</option>
            </select>
          </div>

          <div class="col-12 d-flex justify-content-end">
            <button type="submit" class="btn btn-outline-primary">
              Aplicar
            </button>
          </div>
        </div>
      </form>
    </div>

    <% if (juegos.length == 0) { %>
      <div class="alert alert-warning d-flex align-items-center" role="alert">
        <i class="bi bi-info-circle me-2"></i>
        <div>No hay juegos con esos filtros (o aún no has añadido ninguno).</div>
      </div>
    <% } else { %>
      <div class="row row-cols-1 row-cols-sm-2 row-cols-lg-4 g-3 g-md-4">
        <% juegos.forEach(juego => { %>
          <div class="col">
            <div class="card game-card h-100">
              <img src="<%= juego.imagen %>" class="card-img-top" alt="Imagen de <%= juego.titulo %>">

              <div class="card-body d-flex flex-column">
                <div class="d-flex justify-content-between align-items-start gap-2">
                  <h3 class="h6 fw-bold mb-1"><%= juego.titulo %></h3>
                  <span class="badge badge-soft"><%= juego.estado %></span>
                </div>
                <p class="text-muted small mb-3"><%= juego.plataforma %> · <%= juego.genero %></p>

                <div class="mt-auto d-flex gap-2">
                  <a href="/editar?id=<%= juego.id %>" class="btn btn-sm btn-outline-secondary w-100">Editar</a>
                  <button type="button" class="btn btn-sm btn-outline-danger btn-eliminar" data-juego-id="<%= juego.id %>" data-juego-titulo="<%= juego.titulo %>" data-bs-toggle="modal" data-bs-target="#confirmarEliminar" aria-label="Eliminar">
                    <i class="bi bi-trash"></i>
                  </button>
                </div>
              </div>
            </div>
          </div>
        <% }); %>
      </div>
    <% } %>

  </div>
</section>

<!-- Modal de Confirmación de Eliminación -->
<div class="modal fade" id="confirmarEliminar" tabindex="-1" aria-labelledby="confirmarEliminarLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content rounded-3 shadow">
      <div class="modal-body p-4 text-center">
        <h5 class="mb-0" id="confirmarEliminarLabel">¿Eliminar <span id="juegoNombre"></span>?</h5>
        <p class="text-muted mt-2 small">Esta acción no se puede deshacer.</p>
      </div>

      <div class="modal-footer flex-nowrap p-0">
        <button type="button" class="btn btn-lg btn-link fs-6 text-decoration-none col-6 py-3 m-0 rounded-0 border-end fw-bold" data-bs-dismiss="modal">Cancelar</button>
        <form id="formEliminar" method="POST" action="" class="col-6 m-0">
          <button type="submit" class="btn btn-lg btn-link fs-6 text-danger w-100 py-3 m-0 rounded-0 fw-bold">Eliminar</button>
        </form>
      </div>
    </div>
  </div>
</div>
